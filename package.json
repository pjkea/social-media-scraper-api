{
  "name": "social-media-scraper-api",
  "version": "1.0.0",
  "description": "A comprehensive API for scraping social media posts from Twitter and Facebook using credential-based authentication and session management",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:credentials": "node scripts/test-credentials.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:init": "npm init @eslint/config@latest",
    "docs": "swagger-jsdoc -d swagger.config.js -o docs/swagger.json src/routes/*.js",
    "build": "npm run lint && npm test",
    "clean:sessions": "node scripts/clean-sessions.js",
    "verify": "node scripts/verify-installation.js",
    "docker:build": "docker build -t social-scraper-api .",
    "docker:run": "docker run -p 3000:3000 -v ./sessions:/usr/src/app/sessions social-scraper-api",
    "postinstall": "echo 'Installation complete! Run: npm run verify'"
  },
  "keywords": [
    "social-media",
    "scraper",
    "api",
    "puppeteer",
    "twitter",
    "facebook",
    "swagger",
    "credentials",
    "session-management",
    "anti-detection",
    "automation",
    "web-scraping"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.0.0",
    "joi": "^18.0.1",
    "puppeteer": "^24.22.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.8",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "supertest": "^7.0.0"
  },
  "peerDependencies": {
    "puppeteer": ">=22.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.4"
  },
  "browserslist": [
    "node >= 18"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/**/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": [],
    "verbose": true
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "sessions/",
      "logs/",
      "node_modules/"
    ],
    "delay": 2000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pjkea/social-media-scraper-api.git"
  },
  "bugs": {
    "url": "https://github.com/pjkea/social-media-scraper-api/issues"
  },
  "homepage": "https://github.com/pjkea/social-media-scraper-api#readme"
}