{
  "name": "social-media-scraper-api",
  "version": "1.0.0",
  "description": "A comprehensive API for scraping social media posts with credential-based authentication and session management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:credentials": "node test/test-credentials.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docs": "swagger-jsdoc -d swagger.config.js -o docs/swagger.json src/routes/*.js",
    "build": "npm run lint && npm test",
    "clean:sessions": "node scripts/clean-sessions.js",
    "docker:build": "docker build -t social-scraper-api .",
    "docker:run": "docker run -p 3000:3000 -v ./sessions:/usr/src/app/sessions social-scraper-api"
  },
  "keywords": [
    "social-media",
    "scraper",
    "api",
    "puppeteer",
    "twitter",
    "instagram",
    "linkedin",
    "swagger",
    "credentials",
    "session-management",
    "anti-detection"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.3.8",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.3",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "fs-extra": "^11.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pjkea/social-media-scraper-api.git"
  },
  "bugs": {
    "url": "https://github.com/pjkea/social-media-scraper-api/issues"
  },
  "homepage": "https://github.com/pjkea/social-media-scraper-api#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  }
}